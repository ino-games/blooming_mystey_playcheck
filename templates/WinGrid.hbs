<table cellpadding="0" cellspacing="0" style="background:#ffffff;">
    <tbody>
        <tr style="background:#ffffff;">
            {{#each this}}
            <td style="padding:0px;">
                <table style="width:22px; border-collapse:collapse; margin-left:auto; margin-right:auto; background:#ffffff;">
                    {{#each this}}
                    <tr background:#ffffff;">
                        {{!-- using image --}}
                        <td style="padding:0px; border: none; height: 22px;">
                            {{#switch this}}
                            {{#case 0}}
                            <div style="padding:0px; border:1px solid black;height:100%; width:100%">
                                <img style="height:100%; width:100%" src="{{@root.imagePath}}grid_empty.jpg" />
                            </div>
                            {{/case}}
                            {{#case 1}}
                            <div style="padding:0px; border:1px solid black;height:100%; width:100%">
                                <img style="height:100%; width:100%" src="{{@root.imagePath}}grid_active.jpg" />
                            </div>
                            {{/case}}
                            {{#case -1}}
                            <div style="padding:0px; border:1px solid black;height:100%; width:100%">
                                <img style="height:100%; width:100%" src="{{@root.imagePath}}grid_inactive.jpg" />
                            </div>
                            {{/case}}
                            {{/switch}}
                        </td>
                        {{!-- --}}

                        {{!-- using table color --
                        {{#switch this}}
                            {{#case 0}}
                            <td style="padding:0px; height: 22px; background: white;" />
                            {{/case}}
                            {{#case 1}}
                            <td style="padding:0px; height: 22px; background: rgb(0, 200, 0);" />
                            {{/case}}
                            {{#case -1}}
                            <td style="padding:0px; height: 22px; background: grey;" />
                            {{/case}}
                        {{/switch}}
                        !--}}

                    </tr>
                    {{/each}}
                </table>
            </td>
            {{/each}}
        </tr>
    </tbody>
</table>